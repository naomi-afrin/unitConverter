<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/title"
        android:layout_width="378dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Kilogram to Pound Converter"
        android:textAlignment="center"
        android:textColor="@color/dark_gray"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/kgInput"
        android:layout_width="126dp"
        android:layout_height="92dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/dark_gray"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/kgUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="68dp"
        android:text="kg"
        android:textColor="@color/dark_gray"
        android:textSize="50dp"
        app:layout_constraintStart_toEndOf="@+id/kgInput"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/To"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="28dp"
        android:text="To"
        android:textColor="@color/dark_gray"
        android:textSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kgInput" />

    <TextView
        android:id="@+id/lbUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="148dp"
        android:text="lb"
        android:textColor="@color/dark_gray"
        android:textSize="50dp"
        app:layout_constraintStart_toEndOf="@+id/convertedPounds"
        app:layout_constraintTop_toBottomOf="@+id/kgUnit" />

    <Button
        android:id="@+id/btn"
        android:layout_width="130dp"
        android:layout_height="62dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="36dp"
        android:background="@color/Dark_blue"
        android:text="Convert"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/convertedPounds" />

    <TextView
        android:id="@+id/convertedPounds"
        android:layout_width="126dp"
        android:layout_height="92dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="28dp"
        android:background="@color/white"
        android:gravity="center"
        android:hint="Result"
        android:text=""
        android:textColor="@color/dark_gray"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/To" />


</androidx.constraintlayout.widget.ConstraintLayout>


